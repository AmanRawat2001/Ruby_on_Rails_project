<%= form_with(model: crm) do |form| %>
  <% if crm.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(crm.errors.count, "error") %> prohibited this crm from being saved:</h2>
      <ul>
        <% crm.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class ="field form-group">
    <%= form.label :app_name, style: "display: block" %>
    <%= form.text_field :app_name ,class: "form-control",placeholder:"Please entry your Name" %>
  </div>
  <div class ="field form-group">
    <%= form.label :app_phone, style: "display: block" %>
    <%= form.text_field :app_phone,class: "form-control",placeholder:"Please entry your Phone number" %>
  </div>
  <div class ="field form-group">
    <%= form.label :app_email, style: "display: block" %>
    <%= form.text_field :app_email,class: "form-control",placeholder:"Please entry your Email Address" %>
  </div>
  <div class ="field form-group">
    <%= form.number_field :user_id,class: "form-control",id: :crm_user_id,value:current_user.id,type: :hidden %>
  </div>
  <div>
    <%= form.submit class:'btn btn-secondary' %>
  </div>
<% end %>
